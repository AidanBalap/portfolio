---
interface Props {
    title: string;
    gridArea: string;
}

const { title, gridArea } = Astro.props;
---

<article class="relative" style=`grid-area: ${gridArea};`>
    <picture class="block w-full h-full">
        <slot name="image" />
    </picture>

    <div class="absolute bottom-0 left-0 right-0 p-4 pt-10 bg-gradient-to-t from-zinc-900 to-transparent">
        <div class="flex flex-wrap">
            <h3 class="text-xl md:text-3xl font-semibold text-white mr-2">{title}</h3>
            <slot name="pill-list" />
        </div>
        
        <slot name="description" />
    </div>
</article>